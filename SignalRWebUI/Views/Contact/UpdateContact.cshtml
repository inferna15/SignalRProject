@model UpdateContactDto

@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İletişim Bilgi İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">İletişim Bilgi Güncelleme</div>
						</div>
						<div class="card-body">
							<input type="hidden" asp-for="ContactID" />
							<div class="form-group">
								<label for="Location">Konum</label>
								<input type="text" class="form-control" asp-for="Location" id="Location" />
							</div>
							<div class="form-group">
								<label for="Phone">Telefon</label>
								<input type="text" class="form-control" asp-for="Phone" id="Phone" />
							</div>
							<div class="form-group">
								<label for="Email">Email</label>
								<input type="email" class="form-control" asp-for="Email" id="Email" />
							</div>
							<div class="form-group">
								<label for="description">Açıklama</label>
								<textarea rows="5" class="form-control" asp-for="FooterDescription" id="description"></textarea>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>