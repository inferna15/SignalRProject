@model CreateProductDto

@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ürün İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Ürün Ekleme</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="name">Ürün Adı</label>
								<input type="text" class="form-control" asp-for="Name" id="name" />
							</div>
							<div class="form-group">
								<label for="price">Fiyatı</label>
								<input type="text" class="form-control" asp-for="Price" id="price" />
							</div>
							<div class="form-group">
								<label for="image">Görseli</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="image" />
							</div>
							<div class="form-group">
								<label for="category">Kategorisi</label>
                                @Html.DropDownListFor(m => m.CategoryID, (List<SelectListItem>)ViewBag.CategoryList, new { @class = "form-control"})
							</div>
							<div class="form-group">
								<label for="description">Açıklaması</label>
								<input type="text" class="form-control" asp-for="Description" id="description" />
							</div>
							<div class="form-group">
								<label for="status">Durumu</label>
								<select class="form-control" asp-for="Status" id="status">
									<option>True</option>
									<option>False</option>
								</select>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>