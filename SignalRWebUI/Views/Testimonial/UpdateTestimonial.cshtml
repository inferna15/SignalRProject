@model UpdateTestimonialDto

@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Referans İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Referans Güncelleme</div>
						</div>
						<div class="card-body">
							<input type="hidden" asp-for="TestimonialID" />
							<div class="form-group">
								<label for="name">Ad Soyad</label>
								<input type="text" class="form-control" asp-for="Name" id="name" />
							</div>
							<div class="form-group">
								<label for="Title">Ünvan</label>
								<input type="text" class="form-control" asp-for="Title" id="Title" />
							</div>
							<div class="form-group">
								<label for="Comment">Yorum</label>
								<input type="text" class="form-control" asp-for="Comment" id="Comment" />
							</div>
							<div class="form-group">
								<label for="ImageUrl">Fotoğraf</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl" />
							</div>
							<div class="form-group">
								<label for="status">Durum</label>
								<select class="form-control" asp-for="Status" id="status">
									<option>True</option>
									<option>False</option>
								</select>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>