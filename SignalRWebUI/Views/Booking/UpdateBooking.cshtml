@model UpdateBookingDto

@{
    ViewData["Title"] = "UpdateBooking";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Rezervasyon İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Rezervasyon Güncelleme</div>
						</div>
						<div class="card-body">
							<input type="hidden" asp-for="BookingID" />
							<div class="form-group">
								<label for="name">Ad Soyad</label>
								<input type="text" class="form-control" asp-for="Name" id="name" />
							</div>
							<div class="form-group">
								<label for="phone">Telefon</label>
								<input type="text" class="form-control" asp-for="Phone" id="phone" />
							</div>
							<div class="form-group">
								<label for="email">E-posta</label>
								<input type="email" class="form-control" asp-for="Email" id="email" />
							</div>
							<div class="form-group">
								<label for="person-count">Kişi Sayısı</label>
								<input type="number" class="form-control" asp-for="PersonCount" id="person-count" />
							</div>
							<div class="form-group">
								<label for="date">Tarih</label>
								<input type="date" class="form-control" asp-for="Date" id="date" />
							</div>
							<!--
								<div class="form-group">
								<label for="status">Durumu</label>
								<select class="form-control" asp-for="Status" id="status">
									<option>True</option>
									<option>False</option>
								</select>
							</div>
							-->
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>