@model List<ResultContactDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">İletişim Bilgi İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İletişim Bilgi Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							@if (@Model.Count == 1)
							{
								<div>İletişim bilgisi doğru sayıdadır.</div>
							}
							else if (@Model.Count == 0)
							{
								<div>En az bir adet iletişim bilgisi olmalıdır.</div>
							}
							else
							{
								<div>Sadece bir adet iletişim bilgisi olmalıdır.</div>

							}
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Konum</th>
									<th scope="col">Telefon</th>
									<th scope="col">Email</th>
                                    <th scope="col">Açıklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ContactID</td>
										<td>@item.Location</td>
										<td>@item.Phone</td>
                                        <td>@item.Email</td>
                                        <td>@item.FooterDescription</td>
										<td><a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Contact/UpdateContact/@item.ContactID" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Contact/CreateContact/" class="btn btn-outline-primary">İletişim Bilgisi Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>